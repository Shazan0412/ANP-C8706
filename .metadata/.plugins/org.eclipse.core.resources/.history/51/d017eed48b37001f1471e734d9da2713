package jul1;

public class Employee {
		    private String name;
		    private int id;
		    private double salary;
		    private String department;

		    // Constructor
		    public Employee(String name, int id, double salary, String department) {
		        this.name = name;
		        this.id = id;
		        this.salary = salary;
		        this.department = department;
		    }

		    // Display method
		    public void display() {
		        System.out.println("Name: " + name);
		        System.out.println("ID: " + id);
		        System.out.println("Salary: " + salary);
		        System.out.println("Department: " + department);
		        System.out.println("------------");
		    }

		    public static void main(String[] args) {
		        // Create 3 objects of the Employee class
		        Employee emp1 = new Employee("John Doe", 101, 50000.0, "Sales");
		        Employee emp2 = new Employee("Jane Smith", 102, 60000.0, "Marketing");
		        Employee emp3 = new Employee("Bob Johnson", 103, 70000.0, "IT");

		        // Use the display method to show the data
		        emp1.display();
		        emp2.display();
		        emp3.display();
		    }
		}

